<Window x:Name="options" x:Class="Winky.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="188" Width="300" Closing="Settings_Closing" Loaded="options_Loaded">
    <Grid Margin="0,0,-8,-4">
        <Label x:Name="lblInformation" Content="Paste your WOEID into the box below." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="27" Width="272"/>
        <TextBox x:Name="txtWeatherLocation" HorizontalAlignment="Left" Height="23" Margin="10,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="73"/>
        <Label x:Name="WOEIDInfo" Content="For WOEID information &#xA;" HorizontalAlignment="Left" Margin="83,42,0,0" VerticalAlignment="Top" Width="134" Height="34"/>
        <TextBlock Margin="217,47,11,0" Height="42" VerticalAlignment="Top">
            <Hyperlink NavigateUri="http://woeid.rosselliot.co.nz/lookup/" RequestNavigate="Hyperlink_RequestNavigate">
            Click here
            </Hyperlink>
        </TextBlock>
        <Label x:Name="lblNic" Content="Please Select Your Nic" HorizontalAlignment="Left" Margin="3,76,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboNic" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" />


    </Grid>
</Window>
